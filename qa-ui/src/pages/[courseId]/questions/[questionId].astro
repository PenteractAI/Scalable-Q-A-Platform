---
import Layout from "../../../layout/Layout.astro";
import QuestionSection from "../../../components/Questions/QuestionSection.svelte";
import PostList from "../../../components/PostList.svelte";

const { courseId, questionId } = Astro.params;

---
<Layout>
    <QuestionSection type={"questions"} questionId={questionId} courseId={courseId} client:only={"svelte"} />
    <PostList parentId={questionId} type={"answers"} client:only={"svelte"}/>
</Layout>
